@page
@model Ecommerce.Pages.Admin.CityFormModel
@{
    Layout = "_AdminSide";
}

<form method="post" enctype="multipart/form-data">

    <div class="container  mt-5">
        <div class="row d-flex justify-content-center">
            <div class="col-8">
                <div class="card">
                    <div class="card-header">
                        <h4>City Form</h4>
                        <a asp-page="CityList" class="btn btn-primary">CityList</a>
                    </div>
                    <div class="card-body mb-3">
                        <div class="mb-3">
                            <label for="exampleFormControlInput1" class="form-label">Country</label>
                            <select class="form-select" asp-for="CityModel.CounrtyId">
                            </select>
                            <span class="text-danger" asp-validation-for="CityModel.CounrtyId"></span>
                        </div>
                        <div class="mb-3">
                            <label for="exampleFormControlInput1" class="form-label">State</label>
                            <select class="form-select" asp-for="CityModel.StateId">
                            </select>
                            <span class="text-danger" asp-validation-for="CityModel.StateId"></span>
                        </div>
                        <div class="mb-3">
                            <label for="exampleFormControlInput1" class="form-label">City Name</label>
                            <input class="form-control" asp-for="CityModel.CityName">
                            <span class="text-danger" asp-validation-for="CityModel.CityName"></span>
                        </div>


                    </div>
                    <div class="card-footer d-flex justify-content-center mt-3">


                        <input type="submit" class=" btn btn-primary">


                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

@section JavaScript
{
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}