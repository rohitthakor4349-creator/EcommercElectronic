@page
@model Ecommerce.Pages.Admin.CountryFormModel
@{
    Layout = "_AdminSide";
}
<form method="post" enctype="multipart/form-data">

    <div class="container mt-5">
        <div class="row d-flex justify-content-center">
            <div class="col-8">
                <div class="card">
                    <div class="card-header">
                        <h4>Country Form</h4>
                        <a asp-page="CountryList" class="btn btn-primary float-end">CountryList</a>
                    </div>
                    <div class="card-body mb-3">
                        <div class="mb-3">
                            <label for="exampleFormControlInput1" class="form-label">Country Name</label>
                            <input class="form-control" asp-for="Countries.CountryName">
                            <span class="text-danger" asp-validation-for="Countries.CountryName"></span>
                        </div>

                    </div>
                    <div class="card-footer mb-3">
                        <div class="mb-3">
                            @if (string.IsNullOrEmpty(Request.Query["EditId"].ToString()))
                            {
                                <input type="submit" asp-page-handler="Create" value="Save" class="form-control btn btn-primary">

                            }
                            else
                            {
                                <input type="submit" asp-page-handler="Update" value="Update" class="form-control btn btn-primary">
                                <input type="hidden" asp-for="Countries.CountryId" class="form-control btn btn-primary">

                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
@section JavaScript
{
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

    <script>
        var Qs = new URLSearchParams(window.location.search);
        if(Qs.has("Message"))
        {
            alert(Qs.get("Message"));

            window.location.href = "/Admin/CountryForm";
        }
    </script>
}