@page 
@model Ecommerce.Pages.Admin.CategoryFormModel
@{
    Layout = "_AdminSide";
}
<form method="post" enctype="multipart/form-data">

    <div class="container mt-5">
        <div class="row">
            <div class="col-8">
                <div class="card">
                    <div class="card-header">
                        <h4>Cartegory Form</h4>
                        <a class="btn btn-primary float-end" asp-page="/Admin/Category">CategoryList</a>
                    </div>
                    <div class="card-body mb-3">
                        <div class="mb-3">
                            <label for="exampleFormControlInput1" class="form-label">Category Name</label>
                            <input class="form-control" asp-for="Categeries.Category">
                            <span class="text-danger" asp-validation-for="Categeries.Category"></span>
                        </div>

                    </div>
                    <div class="card-footer mb-3">
                        <div class="mb-3">
                            @if (string.IsNullOrEmpty(Request.Query["EditId"].ToString()))
                            {
                                <input type="submit" asp-page-handler="Create" value="Save" class="form-control btn btn-primary">

                               
                            }
                            else
                            {

                                <input type="hidden" class="form-control" asp-for="Categeries.CategoryId" id="exampleFormControlInput1">

                                <input type="submit" asp-page-handler="Update" value="Update" class="form-control btn btn-primary">

                            }

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

@section JavaScript
{
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

    <script>

        var Qs = new URLSearchParams(window.location.search);

        if(Qs.has("Message"))
        {
            alert(Qs.get("Message"))
            window.location.href = "/Admin/CategoryForm";
        }
    </script>
}
